<Window x:Class="GraphFinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphFinalProject"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="4" HorizontalAlignment="Center" Height="455" Grid.Row="1" VerticalAlignment="Center" Width="128" />
        <Button Content="Find Shortest Path" Grid.Column="0" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="163" Height="40" Margin="10,14.333,0,13.667" />

        <ListBox Grid.Column="5" HorizontalAlignment="Center" Height="455" Grid.Row="1" VerticalAlignment="Center" Width="128" />
        <Button Content="Add Vertex  &amp; Edge" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="168" Height="40" Grid.ColumnSpan="2" />
        <Canvas Name="CanvasPlane" ClipToBounds="True" Background="AliceBlue" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="475" Grid.Row="1" VerticalAlignment="Top" Width="444" Grid.Column="1">
            <Border BorderBrush="Black" BorderThickness="1" Height="475" Width="444" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseLeftButtonUp="Border_MouseLeftButtonUp" MouseMove="Border_MouseMove"/>
        </Canvas>
        <Label Grid.Row="0" Content="Vertices List" FontSize="20" Grid.Column="4" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="0" Content="Adjacency Matrix" FontSize="18" Grid.Column="4" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="148.333,9,0.333,10" Width="148" Grid.ColumnSpan="2" Height="49"/>
        <DockPanel Grid.Column="0" HorizontalAlignment="Left" Height="455" LastChildFill="False" Margin="5,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="163"/>
        <TextBox Name="ButtonAddEdge" Grid.Column="3" HorizontalAlignment="Left" Margin="90.333,14.333,0,35.667" Grid.Row="2" TextWrapping="Wrap" Width="90" Grid.ColumnSpan="2"/>
        <Button Content="Add Edge" Grid.Column="3" HorizontalAlignment="Left" Margin="10.333,13.333,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Height="41"/>
        <Button Content="Add Vertex" Grid.Column="4" HorizontalAlignment="Left" Margin="63.333,13.333,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Height="41" Click="Button_Click"/>
        <TextBox Name="TxtbXaxis" Grid.Column="5" HorizontalAlignment="Left" Margin="9.667,9.333,0,35.667" Grid.Row="2" TextWrapping="Wrap" Width="43"/>
        <TextBox Name="TxtbName" Grid.Column="5" HorizontalAlignment="Left" Margin="9.667,37.333,0,7.667" Grid.Row="2" TextWrapping="Wrap" Width="43"/>
        <Label Content="V1, V2, Weight" Grid.Column="3" HorizontalAlignment="Left" Margin="90.333,32.333,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="90"/>
        <TextBox Name="TxtbYaxis" Grid.Column="5" HorizontalAlignment="Left" Margin="57.667,9.333,0,35.667" Grid.Row="2" TextWrapping="Wrap" Width="43"/>


    </Grid>
</Window>