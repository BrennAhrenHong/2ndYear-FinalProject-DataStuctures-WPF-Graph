<Window x:Class="GraphFinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphFinalProject"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Canvas HorizontalAlignment="Left" Height="542" Background="AntiqueWhite" VerticalAlignment="Top" Width="730" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
        <Button Content="Add Vertex" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="100" Height="40" Margin="10,0,0,0"/>
        <Label Content="Vertices List" FontSize="20" FontFamily="Verdana" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Grid.Column="4" HorizontalAlignment="Left" Height="474" Grid.Row="1" VerticalAlignment="Top" Width="182"/>
        <Button Content="Add Edge" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="100" Height="40" Margin="10,14,0,14"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="118,23,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="118,23,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
        <Button Content="Find Shortest Path" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="108" Height="40" Margin="10,14,0,14"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="123,23,0,0" Grid.Row="2" TextWrapping="Wrap" Text="A" VerticalAlignment="Top" Width="25"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="183,23,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Z" VerticalAlignment="Top" Width="25"/>
        <Label Content="To" Grid.Column="3" Margin="153,23,50,19" Grid.Row="2"/>
    </Grid>
</Window>
